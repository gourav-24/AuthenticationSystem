<!DOCTYPE html>
<html lang="en">
<head>
    <title>Sign In</title>
    <!-- JQuery  -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js" integrity="sha512-894YE6QWD5I59HgZOGReFYm4dnWc1Qt5NtvYSaNcOP+u1T9qYdvdihz0PPSiiqn/+/3e7Jo4EaG7TubfWGUrMQ==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
    
     <!-- noty style sheet and script --> 
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/noty/3.1.4/noty.min.css">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/noty/3.1.4/noty.js" ></script>
    <!-- logo and style sheet -->
    <link rel="icon" href="/images/logo2.png" type="image/x-icon">
    <link rel="stylesheet" href="/css/signUp.css">
    <link rel="stylesheet" href="/css/test.css">

</head>
<body>
    
    <header>
        <div style="margin-top: 20px; " id="logo">
            <img  src="/images/logo2.png" alt="logo">
        </div>
        <div>
            <h1>
                Sign In
            </h1>
        </div>
    </header>
    <!-- notifications -->
    <% if(flash.success && flash.success.length>0 ){ %>

    <div id="Snotification" style="display: none;">

        <%= flash.success %>
    </div>

    <% } %>
    <% if(flash.error && flash.error.length>0 ){ %>

        <div id="errorNotification" style="display: none;">
    
            <%= flash.error %>
        </div>
    
        <% } %>

        <!-- sing in form -->
    <div id="page-area">
        <div id="area-used">
            <div id="changing-image">
                <img  src="/images/iphone.jpg" alt="Iphone's image">
            </div>
            <div id="signup-form">

                
                
                <form id="signinForm" action="/users/createSession" method="POST">
                    <div>
                        <h3>Sign In form </h3>
                    </div>

                        <div class="input-1">
                            <input type="email" id="name-input" autocomplete="off" name="email"  required>
                            <label for="name-input" class="label-name" >
                                <span class="content-name">
                                    E-mail
                                </span>
                            </label>
                            
    
                        </div>

                        <div class="input-1">
                            <input type="password" id="pass-input" autocomplete="off" name="password"  required>
                            <label for="pass-input" class="label-name" >
                                <span class="content-name">
                                    Password
                                </span>
                            </label>
                            
    
                        </div>

                        
                        <div>
                            <label  id="submit-label" for="submit">Sign In</label>
                            <input id="submit" type="submit">

                        </div>
                        

                        <div>
                            <span style="font-size: 12px;"> Don't have an account?</span>
                            <a style="text-decoration:none;  color:#6bc4f8;" href="/users/signup">Sign Up</a>
                        </div>
                        <div>
                            <span style="margin-right:25px ; font-size: 12px;"> or </span>
                            <a style="text-decoration:none; color:#6bc4f8;" href="/users/auth/google">Sign-in via google</a>

                        </div>


                         
    
                    </div>
                </form>
    
    
            </div>
        </div>
    </div>

    
    <footer>
        <div>
            <h4>
                About
            </h4>
            
        </div>
        <div>
            <h4>
                Contact Us
            </h4>

        </div>
        <div>
            <h4>
                Privacy Policy
            </h4>

        </div>
        <div>
            <h4>&copy; 2021 </h4>
            
        </div>
    </footer>
    <script src="/js/notifications.js"> </script>
</body>
</html>