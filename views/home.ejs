<html>
  <head>
    <title>Home</title>
    <!-- noty style sheet and script -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/noty/3.1.4/noty.min.css">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/noty/3.1.4/noty.js" ></script>
    <!-- JQuery -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js" integrity="sha512-894YE6QWD5I59HgZOGReFYm4dnWc1Qt5NtvYSaNcOP+u1T9qYdvdihz0PPSiiqn/+/3e7Jo4EaG7TubfWGUrMQ==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
    
  </head>
  <body>
    <% if(locals.user){ %>
      <!-- render user name  -->
    <h1>Hey <%= locals.user.name %>, You are logged in</h1>

    <!-- hidden notifiactions so that helping script can pick data -->
    <% if(flash.success && flash.success.length>0){ %>
      <div id="Snotification" style="display: none;">
        <%= flash.success %>
      </div>
      
    <% } %>
    
    <% if(flash.error && flash.error.length>0 ){ %>

      <div id="errorNotification" style="display: none;">
  
          <%= flash.error %>
      </div>
  
      <% } %>

      <!--  logout button -->
    <div>
      <a href="/users/logout"
        ><svg
          class="bi bi-power"
          width="1em"
          height="1em"
          viewBox="0 0 16 16"
          fill="currentColor"
          xmlns="http://www.w3.org/2000/svg"
        >
          <path
            fill-rule="evenodd"
            d="M5.578 4.437a5 5 0 104.922.044l.5-.866a6 6 0 11-5.908-.053l.486.875z"
            clip-rule="evenodd"
          />
          <path
            fill-rule="evenodd"
            d="M7.5 8V1h1v7h-1z"
            clip-rule="evenodd"
          /></svg
      ></a>
    </div>
    <% }else{ %>
      <!-- sign in and sign up links -->
    <a href="/users/signin">sign in</a>
    <a href="/users/signup">sign up</a>
    <% } %>

    <!-- helper script -->
    <script src="/js/notifications.js"> </script>
  </body>
</html>
